@model Cinema_ETickets.ViewModel.ResendEmailConfirmationVM

@{
    ViewData["Title"] = "Resend Email Confirmation";
}

@if (TempData["success-notification"] is not null)
{
    @section Scripts {
    <script>
        toastr.error('@TempData["success-notification"]')
    </script>
    }
}

@if (@TempData["error-notification"] is not null)
{
    @section Scripts {
    <script>
        toastr.error('@TempData["error-notification"]')
    </script>

    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

    }
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Resend Email Confirmation</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="ResendEmailConfirmation" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="EmailOrUserName" class="form-label"></label>
                    <input asp-for="EmailOrUserName" class="form-control" placeholder="Enter your email or username" />
                    <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-warning">Send Confirmation Email</button>
                </div>

                <div class="mt-3 text-center">
                    <a asp-action="Login" class="btn btn-outline-secondary">Back to Login</a>
                </div>
            </form>
        </div>
    </div>
</div>


