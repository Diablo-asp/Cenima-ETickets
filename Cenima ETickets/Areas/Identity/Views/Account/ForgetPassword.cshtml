@model Cinema_ETickets.ViewModel.ForgetPasswordVM

@{
    ViewData["Title"] = "ForgetPassword";
}


<div class="container">
    <h1>ForgetPassword</h1>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="ForgetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmailOrUserName" class="control-label"></label>
                    <input asp-for="EmailOrUserName" class="form-control" />
                    <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Reset Password" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Login" class="btn btn-primary mt-3">
            <i class="fas fa-user-plus me-1"></i> Login
        </a>
    </div>
</div>



