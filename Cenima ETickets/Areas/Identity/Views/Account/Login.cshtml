@model Cinema_ETickets.ViewModel.LoginVM

@{
    ViewData["Title"] = "Login";
}

@if (TempData["success-notification"] is not null)
{
    @section Scripts {
    <script>
        toastr.error('@TempData["success-notification"]')
    </script>
    }
}

@if (@TempData["error-notification"] is not null)
{
    @section Scripts {
    <script>
        toastr.error('@TempData["error-notification"]')
    </script>

    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

    }
}

<div class="container">
    <h1>Login</h1>

    <h4>LoginVM</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserNameOrEmail" class="control-label"></label>
                    <input asp-for="UserNameOrEmail" class="form-control" />
                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex gap-2 mt-3">
        <a asp-controller="Home" asp-action="Index" asp-area="Customer" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
        <a asp-action="Register" class="btn btn-primary">
            <i class="fas fa-user-plus me-1"></i> Register
        </a>
        <a asp-action="Register" class="btn btn-primary">
            <i class="fas fa-user-plus me-1"></i> Forget Password 
        </a>
    </div>
</div>
