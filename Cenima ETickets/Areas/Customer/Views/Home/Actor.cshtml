@model Actor

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Cinema E-Tickets</title>
<link href="~/css/Customer/styles.css" rel="stylesheet" />

<div class="container mt-5 text-light">
    <div class="text-center">
        <img src="~/images/cast/@Model.ProfilePic" class="rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;" />
        <h3 class="mt-3">@Model.FirstName @Model.LastName</h3>
    </div>

    <div class="mt-4">
        <p><strong>Biography:</strong> @Model.Bio</p>
    </div>

    <a href="/" class="btn btn-outline-light mt-3">Back to Home</a>
</div>


