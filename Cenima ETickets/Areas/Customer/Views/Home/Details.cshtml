@using Cenima_ETickets.ViewModel
@model ActorMovie

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Cinema E-Tickets</title>
<link href="~/css/Customer/styles.css" rel="stylesheet" />

<style>
    body {
        background-color: #1e1e1e;
        color: #f1f1f1;
    }

    .details-card {
        background-color: #2c2c2c;
        padding: 25px;
        border-radius: 10px;
    }

    .actor-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 50%;
        margin-right: 10px;
        box-shadow: 0 0 5px rgba(255, 255, 255, 0.2);
    }
</style>

<div class="container mt-5">
    <div class="row">
        <!-- صورة الفيلم -->
        <div class="col-md-5">
            <img src="~/images/movies/@Model.movie.ImgUrl" class="img-fluid rounded shadow" alt="@Model.movie.Name" />
        </div>

        <!-- بيانات الفيلم -->
        <div class="col-md-7">
            <div class="details-card shadow">
                <h2 class="mb-3">@Model.movie.Name</h2>

                <p><strong>Description:</strong> @Model.movie.Description</p>
                <p><strong>Price:</strong> @Model.movie.Price.ToString("C")</p>
                <p><strong>Category:</strong> @Model.movie.Category.Name</p>
                <p><strong>Cinema:</strong> @Model.movie.cenima.Name</p>
                <p><strong>Start Date:</strong> @Model.movie.StartDate.ToString("yyyy-MM-dd")</p>
                <p><strong>End Date:</strong> @Model.movie.EndDate.ToString("yyyy-MM-dd")</p>

                <p>
                    <strong>Status:</strong>
                    @switch (Model.movie.CurrentStatus)
                    {
                        case MovieStatus.Active:
                            <span class="badge bg-success">Active</span>
                            ; break;
                        case MovieStatus.upcoming:
                            <span class="badge bg-warning text-dark">Upcoming</span>
                            ; break;
                        case MovieStatus.Expired:
                            <span class="badge bg-danger">Expired</span>
                            ; break;
                    }
                </p>

                <!-- الممثلين -->
                <div class="mt-4">
                    <strong>Actors:</strong>
                    <div class="d-flex flex-wrap mt-2">
                        <div class="text-center me-3">
                            <a href="#">
                                <img src="~/images/cast/@Model.actor.ProfilePic" class="actor-img" alt="@Model.actor.FirstName" />
                            </a>
                            <p class="small text-white mt-1">@Model.actor.FirstName @Model.actor.LastName</p>
                        </div>
                    </div>
                </div>

                <video controls style="border-radius: 8px;">
                    <source src="~/videos/@Model.movie.TrairlerUrl" type="video/mp4">
                    Your browser does not support the video tag.
                </video>

                <a href="#"
                   class="btn btn-sm w-100
                        @(Model.movie.CurrentStatus == MovieStatus.Active || Model.movie.CurrentStatus == MovieStatus.upcoming
                        ? "btn-success"
                        : "btn-secondary disabled")">
                    Booking
                </a>
            </div>
        </div>
    </div>
</div>
