@model Cinema_ETickets.Models.Cenima
@{
    ViewData["Title"] = "Edit Cinema";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Edit Cinema</h2>
    <hr />
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Current Logo</label><br />
            <img src="~/images/Cinemas/@Model.CenimaLogo" width="80" class="rounded-circle shadow" />
            <span asp-validation-for="CenimaLogo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Change Logo</label>
            <input type="file" class="form-control" name="CenimaLogo" />
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>
