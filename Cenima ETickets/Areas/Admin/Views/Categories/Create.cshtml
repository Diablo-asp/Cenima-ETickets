@model Category


@{
    ViewData["Title"] = "Create Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Create New Category</h2>
    <hr />

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Category Name</label>
            <input type="text" name="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-denger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Category Image</label>
            <input type="file" name="CategoryUrl" class="form-control" id="categoryImageInput" required />
            <span asp-validation-for="CategoryUrl" class="text-denger"></span>
        </div>

        <div class="mb-3">
            <img id="previewImage" src="~/images/Categorys/default.jpg" class="img-fluid rounded shadow" style="max-height: 250px;" />
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            document.getElementById("categoryImageInput").addEventListener("change", function (event) {
                const file = event.target.files[0];
                const preview = document.getElementById("previewImage");

                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        preview.src = e.target.result;
                    }
                    reader.readAsDataURL(file);
                }
            });
        </script>
}
