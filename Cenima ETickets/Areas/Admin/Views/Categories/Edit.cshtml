@model Cinema_ETickets.Models.Category
@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Edit Category</h2>
    <hr />

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Category Name</label>
            <input type="text" name="Name" value="@Model.Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-denger"></span>

        </div>

        <div class="mb-3">
            <label class="form-label">Current Image</label><br />
            <img src="~/images/Categorys/@Model.CategoryUrl" class="img-thumbnail" style="max-height: 200px;" />
            <span asp-validation-for="CategoryUrl" class="text-denger"></span>

        </div>

        <div class="mb-3">
            <label class="form-label">Upload New Image (optional)</label>
            <input type="file" name="NewImage" class="form-control" />
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>

